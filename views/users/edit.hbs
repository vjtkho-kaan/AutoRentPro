<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-white text-center py-4 border-bottom">
                <h4 class="mb-1 fw-bold text-warning">Chi Tiết Người Dùng</h4>
                <p class="text-secondary small mb-0">Cập nhật thông tin và phân quyền</p>
            </div>
            <div class="card-body p-4 pt-3">
                <form action="/users/update/{{user._id}}" method="POST">

                    <div class="mb-3">
                        <label class="form-label text-uppercase small fw-bold text-secondary ls-1">Tên người
                            dùng</label>
                        <input type="text" name="name" class="form-control bg-light border-0 focus-ring-none py-2"
                            value="{{user.name}}" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-uppercase small fw-bold text-secondary ls-1">Email</label>
                        <input type="email" name="email" class="form-control bg-light border-0 focus-ring-none py-2"
                            value="{{user.email}}" required>
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-uppercase small fw-bold text-secondary ls-1">Vai trò</label>
                        <select name="role" class="form-select bg-light border-0 focus-ring-none py-2">
                            <option value="CUSTOMER" {{#if (eq user.role 'CUSTOMER' )}}selected{{/if}}>
                                Khách hàng (CUSTOMER)
                            </option>
                            <option value="CAR_OWNER" {{#if (eq user.role 'CAR_OWNER' )}}selected{{/if}}>
                                Chủ xe (CAR_OWNER)
                            </option>
                            <option value="ADMIN" {{#if (eq user.role 'ADMIN' )}}selected{{/if}}>
                                Quản trị viên (ADMIN)
                            </option>
                        </select>
                        <div class="form-text text-danger mt-2">
                            <i class="bi bi-exclamation-triangle-fill me-1"></i> Cẩn thận khi cấp quyền ADMIN.
                        </div>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-warning fw-bold shadow-sm py-2 rounded-pill text-white">
                            Cập nhật User
                        </button>
                    </div>
                    <div class="text-center">
                        <a href="/users" class="text-decoration-none text-secondary small">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>