<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-0">Quản lý Người Dùng</h2>
        <p class="text-secondary small mb-0">Quản lý tài khoản khách hàng và quản trị viên</p>
    </div>

    <a href="/users/create" class="btn btn-success shadow-sm">
        <i class="bi bi-person-plus-fill me-1"></i> Thêm User
    </a>
</div>

{{#if admins}}
<div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
    <div class="card-header bg-danger text-white d-flex align-items-center py-3">
        <i class="bi bi-shield-lock-fill me-2 fs-5"></i>
        <h5 class="mb-0 fw-bold">Quản trị viên Hệ thống</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table mb-0 align-middle">
                <tbody>
                    {{#each admins}}
                    <tr class="bg-danger-subtle">
                        <td class="ps-4 fw-bold text-danger">{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td><span class="badge bg-danger">ADMIN</span></td>
                        <td class="text-end pe-4 text-muted small">{{formatDate this.createdAt}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/if}}

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-muted small fw-bold text-uppercase ls-1">Danh sách Người dùng</h5>

        <form action="/users" method="GET" class="d-flex align-items-center gap-2">
            <div class="input-group input-group-sm">
                <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-filter"></i></span>
                <select name="sort" class="form-select border-start-0 ps-0 text-secondary bg-light focus-ring-none"
                    onchange="this.form.submit()" style="max-width: 200px;">
                    <option value="latest" {{#if (eq currentSort 'latest' )}}selected{{/if}}>Mới nhất</option>
                    <option value="oldest" {{#if (eq currentSort 'oldest' )}}selected{{/if}}>Cũ nhất</option>
                    <option value="alpha" {{#if (eq currentSort 'alpha' )}}selected{{/if}}>Tên A-Z</option>
                </select>
            </div>
        </form>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small">Tên người dùng</th>
                        <th class="py-3 text-secondary text-uppercase small">Email</th>
                        <th class="py-3 text-secondary text-uppercase small">Vai trò</th>
                        <th class="py-3 text-secondary text-uppercase small">Ngày tham gia</th>
                        <th class="pe-4 py-3 text-secondary text-uppercase small text-end">Hành động</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    {{#each users}}
                    <tr>
                        <td class="ps-4 fw-medium text-dark">{{this.name}}</td>
                        <td class="text-secondary">{{this.email}}</td>
                        <td>
                            {{#if (eq this.role "CAR_OWNER")}}
                            <span
                                class="badge rounded-pill bg-primary-subtle text-primary border border-primary-subtle px-3">CHỦ
                                XE</span>
                            {{else}}
                            <span
                                class="badge rounded-pill bg-success-subtle text-success border border-success-subtle px-3">KHÁCH
                                HÀNG</span>
                            {{/if}}
                        </td>
                        <td class="text-muted small">
                            {{formatDate this.createdAt}}
                        </td>

                        <td class="text-end pe-4">
                            <div class="btn-group">
                                <a href="/users/edit/{{this._id}}" class="btn btn-sm btn-outline-secondary border-0"
                                    title="Chỉnh sửa">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <form action="/users/delete/{{this._id}}" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger border-0"
                                        onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?')"
                                        title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <i class="bi bi-people text-muted fs-1 d-block mb-2"></i>
                            <span class="text-muted">Không tìm thấy user nào trong hệ thống.</span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>