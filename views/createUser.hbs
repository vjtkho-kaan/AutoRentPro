<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 rounded-3">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> {{error}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {{/if}}

        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-white text-center py-4 border-bottom">
                <h4 class="mb-1 fw-bold text-success">Thêm Người Dùng</h4>
                <p class="text-secondary small mb-0">Tạo tài khoản mới cho hệ thống</p>
            </div>
            <div class="card-body p-4 pt-3">
                <form action="/users/store" method="POST">

                    <div class="mb-3">
                        <label class="form-label text-uppercase small fw-bold text-secondary ls-1">Họ và tên</label>
                        <input type="text" name="name" class="form-control bg-light border-0 focus-ring-none py-2"
                            placeholder="Nhập tên người dùng" value="{{oldData.name}}" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-uppercase small fw-bold text-secondary ls-1">Email</label>
                        <input type="email" name="email" class="form-control bg-light border-0 focus-ring-none py-2"
                            placeholder="name@example.com" value="{{oldData.email}}" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-uppercase small fw-bold text-secondary ls-1">Số điện thoại</label>
                        <input type="text" name="phone" class="form-control bg-light border-0 focus-ring-none py-2"
                            placeholder="09xxxxxxx" value="{{oldData.phone}}">
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-uppercase small fw-bold text-secondary ls-1">Vai trò</label>
                        <select name="role" class="form-select bg-light border-0 focus-ring-none py-2">
                            <option value="CUSTOMER" {{#if (eq oldData.role 'CUSTOMER' )}}selected{{/if}}>Khách thuê
                                (Customer)</option>
                            <option value="CAR_OWNER" {{#if (eq oldData.role 'CAR_OWNER' )}}selected{{/if}}>Chủ xe (Car
                                Owner)</option>
                            <option value="ADMIN" {{#if (eq oldData.role 'ADMIN' )}}selected{{/if}}>Quản trị viên
                                (Admin)</option>
                        </select>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-success fw-bold shadow-sm py-2 rounded-pill">
                            <i class="bi bi-check-lg me-1"></i> Lưu người dùng
                        </button>
                    </div>
                    <div class="text-center">
                        <a href="/users" class="text-decoration-none text-secondary small">Hủy bỏ</a>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light text-center py-3 border-top-0">
                <small class="text-muted fst-italic"><i class="bi bi-info-circle me-1"></i> Mật khẩu mặc định:
                    <b>123456</b></small>
            </div>
        </div>
    </div>
</div>