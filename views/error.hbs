<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        {{#if (eq error.status 404)}}
                        <i class="bi bi-exclamation-triangle text-warning" style="font-size: 5rem;"></i>
                        {{else if (eq error.status 403)}}
                        <i class="bi bi-shield-lock text-danger" style="font-size: 5rem;"></i>
                        {{else}}
                        <i class="bi bi-x-circle text-danger" style="font-size: 5rem;"></i>
                        {{/if}}
                    </div>

                    <h1 class="display-4 fw-bold mb-3">{{title}}</h1>
                    <p class="lead text-muted mb-4">{{message}}</p>

                    <div class="d-flex gap-3 justify-content-center">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>Về trang chủ
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>